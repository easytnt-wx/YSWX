<view class='container'>
  <view class='title'>完善个人信息</view>
  <form bindsubmit="formSubmit">
    <view class='form-group'>
      <label>姓名</label>
      <input class='number' placeholder='**文 (请输入完整姓名)' type='text' placeholder-class="phd-color" name="name"></input>
    </view>
    <view class='form-group'>
      <label>手机号</label>
      <input class='number' placeholder='请输入手机号' type='number' maxlength="11" placeholder-class="phd-color" name='phone'></input>
    </view>
    <button class='Btn1 mgtb65' formType="submit">确认</button>
  </form>
</view>